[user]
	name = Jochen Keil
	email = jochen.keil@gmail.com
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = /home/jochen/.gitignore
	pager = less -FXRS
	editor = vim
[merge]
	tool = vimdiff
[tar "tbz"]
	command = bzip2 -c
[tar "tar.bz2"]
	command = bzip2 -c
[alias]
	ctags    = !.git/hooks/ctags
	l        = log
	lp       = log -p
	s        = status
	cl       = clone
	c        = commit
	cv       = commit -v
	ca       = commit -v --amend
	co       = checkout
	cp       = checkout -p
	a        = add
	ap       = add -p
	r        = reset
	rp       = reset -p
	di       = diff
	sm       = submodule
	smup     = submodule update --recursive --init
	ps       = push
	pl       = pull
	populate = !populate.bash -l -s . -d ..
